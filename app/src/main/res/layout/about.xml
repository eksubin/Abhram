<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/cloud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abhram"
        android:textColor="#00AAFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer data through your fingers"
        android:id="@+id/magic"
        android:layout_centerHorizontal="true"
        android:textColor="#00AAFF"
        android:layout_below="@+id/name"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" &quot;It is important to remember that we all have magic inside us.&quot;"
    android:gravity="center"
    android:textStyle="italic"
    android:textColor="#00AAFF"
    android:textSize="12sp"
    android:layout_below="@+id/magic"
    android:layout_centerHorizontal="true"
    android:id="@+id/quote"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-J.K.Rownling"
        android:layout_below="@+id/quote"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:textSize="13sp"
        android:paddingRight="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magic"
        android:text=" Developed by Subin E K and Shruti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:textSize="15sp"

        />

</RelativeLayout>